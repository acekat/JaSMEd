/*
 * Styling
 */
body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	min-width: 960px
	padding: 30px

a
	color: link-color

header, footer
	padding: 0 20px
	background: bg-color

header
	overflow: hidden
	h1
		float: left
	span
		color: link-color
	#credentials
		float: right

footer
	p
		text-align: center

#content
	padding: 20px

.module
	display: inline-block
	vertical-align: top

.instrument
	width: 15%

.controls
	width: 15%

// editor variables
cell-height = 12px
pitch-style()
	height: cell-height
	border-bottom: 1px solid bd-color

.editor
	width: 70%
	
	.layer-info-win
		margin-left: 40px
		background: win-color
		border: 1px solid
		overflow: hidden

	.layer-info
		display: table-cell
		white-space: nowrap

	.block-layer-info
		display: inline-block
		width: 200px
		height: 100%
		border-right: 1px solid bd-color

	.layer-list
		list-style: none
		margin: 0
		padding: 0
		li
			float: left

	.add-layer
		width: 20px

	.piano-win
		float: left
		width: 40px
		height: 300px
		background: win-color
		border: 1px solid
		overflow: hidden

	.piano
		width: 40px
		height: 480px

	.piano-key
		position: relative
		width: 100%
		height: cell-height
		
	.piano-key.white
		border-bottom: 1px solid bd-color
		background: #EFEDEB
		span
			position: absolute
			bottom: 0
			right: 4px
			font-size: 8px

	.piano-key.white.A1, .piano-key.white.G1,
	.piano-key.white.A2, .piano-key.white.G2,
	.piano-key.white.A3, .piano-key.white.G3, 
	.piano-key.white.A4, .piano-key.white.G4,
	.piano-key.white.A5, .piano-key.white.G5,
	.piano-key.white.A6, .piano-key.white.G6,
	.piano-key.white.A7, .piano-key.white.G7,
	.piano-key.white.B1, .piano-key.white.F1,
	.piano-key.white.B2, .piano-key.white.F2,
	.piano-key.white.B3, .piano-key.white.F3, 
	.piano-key.white.B4, .piano-key.white.F4,
	.piano-key.white.B5, .piano-key.white.F5,
	.piano-key.white.B6, .piano-key.white.F6,
	.piano-key.white.B7, .piano-key.white.F7 
		height: ((cell-height*7)/4)
	.piano-key.white.E1, .piano-key.white.C1,
	.piano-key.white.E2, .piano-key.white.C2,
	.piano-key.white.E3, .piano-key.white.C3, 
	.piano-key.white.E4, .piano-key.white.C4,
	.piano-key.white.E5, .piano-key.white.C5,
	.piano-key.white.E6, .piano-key.white.C6,
	.piano-key.white.E7, .piano-key.white.C7, 
	.piano-key.white.D1, .piano-key.white.D2,
	.piano-key.white.D3, .piano-key.white.D4,
	.piano-key.white.D5, .piano-key.white.D6, .piano-key.white.D7
		height: ((cell-height*5)/3)

	.piano-key.black
		z-index: 1
		width: 70%
		margin: -(cell-height/2) 0
		border-width: 2px 7px 2px 0
		border-color: bd-color 
		border-style: outset outset inset none 
		background: #7C7C7C

	.grid-win
		position: relative
		height: 300px
		background: win-color
		border: 1px solid
		overflow: hidden

	.grid
		display: table-cell
		white-space: nowrap
		background: bg-color url("../images/grid-bg.png")

	.block
		display: inline-block
		position: relative
		vertical-align: top
		width: 200px
		border-right: 1px solid bd-color

	.add-block
		display: inline-block

	.layer
		position: absolute
		display: table
		table-layout: fixed
		width: 100%
		
	.pitch
		display: table-row
		
	.cell
		display: table-cell
		height: cell-height
		border-bottom: 1px solid bd-color

	.cell.on
		background: link-color

	.cell.on.user-thibaud
		background: thibaud

	.cell.on.user-jaimito
		background: jaimito

	.cell.on.user-acekat
		background: acekat

	.cell.on.user-esj
		background: esj

	.cell.on.user-grizix
		background: grizix

	.cell.on.user-berthou
		background: berthou

	.layer.editable
		position: relative
		.cell:not(.editable)
			border-right: 1px dotted bd-color
		.cell.on:not(.note-end)
			border-right: none


