body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	min-width: 960px
	padding: 30px

a
	color: #00B7FF

.float-left {
	float: left;
}

.float-right {
	float: right;
}

.clear-left {
	clear: left;
}

.clearfix:after {
	content: "";
	clear: both;
	display: block;
}

#header,
#footer {
	padding: 0 20px;
	background: #F2F2F2;
}

#footer p {
	text-align: center;
}

.no {
	font-size: .5em;
	text-decoration: line-through;
}

#content {
	padding: 20px;
}

.flash {
	display: inline-block;
	padding: 5px;
}

.warn {
	color: #DF013A;
	background: #F5A9A9;
	border: 1px solid #DF013A;
}

.blue {
	color: #00B7FF;
}


#grid
	display: block
	width: 75%
	height: 300px
	margin: auto
	background: #ddd
	border: 1px solid
	overflow: auto

#grid-layer
	display: table-cell
	white-space: nowrap
	width: 9999px
	
.bar-container
	display: inline-table
	width: 25%
	border-right: 1px solid #aaa
	
.note
	display: table-row
	
.sub-note
	display: table-cell
	width: 1%
	height: 25px
	border-right: 1px dotted #bbb

.note:nth-child(odd)
	background: #ccc

.note:nth-child(even)
	background: #ddd

.do
	.on
		background: #c00
.re
	.on
		background: #0c0
.mi
	.on
		background: #00c
.fa
	.on
		background: #d00
.sol
	.on
		background: #0d0
.la
	.on
		background: #00d
.si
	.on
		background: #cd0
