/*
 * Styling
 */
body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	min-width: 960px
	padding: 30px

a
	color: #00B7FF

header, footer
	padding: 0 20px
	background: #E0E0E0

header
	overflow: hidden
	h1
		float: left
	span
		color: #00B7FF
	#credentials
		float: right

footer
	p
		text-align: center

#content
	overflow: hidden
	padding: 20px

.flash
	display: inline-block
	padding: 0 5px

.warn
	color: #DF013A
	background: #F5A9A9
	border: 1px solid #DF013A

section.editor
	width: 75%
	margin: auto
	
	.layer-info-win
		margin-left: 40px
		background: #ddd
		overflow: hidden

	.layer-info
		display: table-cell
		white-space: nowrap
		width: 999px

	.bloc-layer-info
		display: inline-block
		width: 25%
		border-right: 1px solid #aaa

		.add-layer
			float: right

	.piano-win
		float: left
		width: 40px
		height: 300px
		background: #ddd
		overflow: hidden

	.grid-win
		height: 300px
		background: #ddd
		border: 1px solid
		overflow: auto

	.grid
		display: table-cell
		white-space: nowrap
		width: 999px

	.bloc
		position: relative
		display: inline-block
		vertical-align: top
		width: 25%
		border-right: 1px solid #aaa

	.add-bloc
		width: 40px
		height: 100%
		background: #bbb

	.layer
		position: absolute
		display: table
		width: 100%
		
	.pitch
		display: table-row
		
	.note
		display: table-cell
		height: 25px
		border-right: 1px dotted #bbb

	.pitch:nth-child(odd)
		background: #ccc

	.pitch:nth-child(even)
		background: #ddd

	.login.thibaud
		color: thibaud
		
	.login.jaimito
		color: jaimito

	.login.acekat
		color: acekat
		
	.login.esj
		color: esj

	.login.grizix
		color: grizix

	.login.berthou
		color: berthou

	//.note.on background: #00B7FF

	.note.on.login-thibaud
		background: thibaud

	.note.on.login-jaimito
		background: jaimito

	.note.on.login-acekat
		background: acekat

	.note.on.login-esj
		background: esj

	.note.on.login-grizix
		background: grizix

	.note.on.login-berthou
		background: berthou