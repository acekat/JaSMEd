// color variables
thibaud = #44ACCF
jaimito = #EE3E64
acekat = #B7D84B 
esj = #8904B1
grizix = #E2A741
berthou = #000000


/*
 * CSS reset
 */
html, button, input, select, textarea 
	font-family: sans-serif ; color: #222
body
	margin: 0 ; font-size: 1em ; line-height: 1.4
a:focus
	outline: thin dotted
a:hover, a:active
	outline: 0
b, strong
	font-weight: bold


/*
 * Styling
 */
body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	min-width: 960px
	padding: 30px

a
	color: #00B7FF

header, footer
	padding: 0 20px
	background: #E0E0E0

header
	overflow: hidden
	h1
		float: left
	span
		color: #00B7FF
	#credentials
		float: right

footer
	p
		text-align: center

#content
	padding: 20px

.flash
	display: inline-block
	padding: 0 5px

.warn
	color: #DF013A
	background: #F5A9A9
	border: 1px solid #DF013A

.grid
	width: 75%
	height: 300px
	margin: auto
	background: #ddd
	border: 1px solid
	overflow: auto

.grid-layer
	display: table-cell
	white-space: nowrap
	width: 9999px
	
.bar-container
	display: inline-table
	width: 25%
	border-right: 1px solid #aaa
	
.pitch
	display: table-row
	
.note
	display: table-cell
	width: 1%
	height: 25px
	border-right: 1px dotted #bbb

.pitch:nth-child(odd)
	background: #ccc

.pitch:nth-child(even)
	background: #ddd

.login.thibaud
	color: thibaud
	
.login.jaimito
	color: jaimito

.login.acekat
	color: acekat
	
.login.esj
	color: esj

.login.grizix
