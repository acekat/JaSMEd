// color variables
thibaud = #44ACCF
jaimito = #EE3E64
acekat = #B7D84B 
esj = #8904B1
grizix = #E2A741
berthou = #000000


/*
 * CSS reset
 */
html, button, input, select, textarea 
	color: #222
body
	margin: 0 ; font-size: 1em ; line-height: 1.4
a:focus
	outline: thin dotted
a:hover, a:active
	outline: 0
b, strong
	font-weight: bold

