// color variables
thibaud = #44ACCF
jaimito = #EE3E64
acekat = #B7D84B 
esj = #8904B1
grizix = #E2A741
berthou = #000000


/*
 * CSS reset
 */
html, button, input, select, textarea 
	color: #222
body
	margin: 0 ; font-size: 1em ; line-height: 1.4
a:focus
	outline: thin dotted
a:hover, a:active
	outline: 0
b, strong
	font-weight: bold

.clearfix:before, .clearfix:after
	content: ""
	display: table
.clearfix:after
	clear: both

/*
 * Styling
 */
body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	min-width: 960px
	padding: 30px

a
	color: #00B7FF

header, footer
	padding: 0 20px
	background: #E0E0E0

header
	overflow: hidden
	h1
		float: left
	span
		color: #00B7FF
	#credentials
		float: right

footer
	p
		text-align: center

#content
	padding: 20px

section
	display: inline-block
	vertical-align: top
	background: #ddd

.instrument
	width: 15%

.tools
	width: 15%

// editor variables
note-height = 20px
pitch-style()
	height: note-height
	border-bottom: 1px solid #aaa

.editor
	width: 70%
	
	.layer-info-win
		margin-left: 42px
		background: #ddd
		border: 1px solid
		overflow: hidden

	.layer-info
		display: table-cell
		white-space: nowrap

	.bloc-layer-info
		display: inline-block
		width: 200px
		height: 100%
		border-right: 1px solid #aaa

	.layer-list
		list-style: none
		margin: 0
		padding: 0
		li
			float: left

	.add-layer
		width: 20px

	.piano-win
		float: left
		width: 40px
		height: 300px
		background: #ddd
		border: 1px solid
		overflow: hidden

	.piano
		width: 40px
		height: 480px

	.piano-key
		width: 100%
		height: note-height
		border-bottom: 1px solid #aaa
		
	.piano-key.white
		background: #fff

	.piano-key.black
		background: #000

	.grid-win
		position: relative
		height: 300px
		background: #ddd
		border: 1px solid
		overflow: hidden

	.grid
		display: table-cell
		white-space: nowrap
		background: #ddd url("../images/grid-bg.png")

	.bloc
		display: inline-block
		position: relative
		vertical-align: top
		width: 200px
		border-right: 1px solid #aaa

	.add-bloc
		display: inline-block

	.layer
		position: absolute
		display: table
		table-layout: fixed
		width: 100%
		
	.pitch
		display: table-row
		
	.note
		display: table-cell
		height: note-height
		border-bottom: 1px solid #aaa

	.note.on
		background: #00B7FF

	.note.on.user-thibaud
		background: thibaud

	.note.on.user-jaimito
		background: jaimito

	.note.on.user-acekat
		background: acekat

	.note.on.user-esj
		background: esj

	.note.on.user-grizix
		background: grizix

	.note.on.user-berthou
		background: berthou

	.layer.editable
		position: relative
		.note:not(.editable)
			border-right: 1px dotted #bbb


.login.thibaud
	color: thibaud
	
.login.jaimito
	color: jaimito

.login.acekat
	color: acekat
	
.login.esj
	color: esj

.login.grizix
	color: grizix

.login.berthou
	color: berthou


.flash
	display: inline-block
	padding: 0 5px

.warn
	color: #DF013A
	background: #F5A9A9
	border: 1px solid #DF013A
