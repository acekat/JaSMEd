extends layout

block scripts
	include includes/scripts

block content
	section.grid
		.grid-layer
			each bar, i in seq
				- var n = i + 2; 
				unless (i % 2)
					n = 4
				.bar-container(class='bc-#{i+1} sub-#{n}')
					each pitch, j in pitches
						.pitch(class='#{pitch} p-#{j+1}')
							each note, k in bar[j]
								- var noteOn = '';
								if (note)
									noteOn = ' on ' + 'login-' + note.login;
								.note(class='sn-#{k+1}' + noteOn)
