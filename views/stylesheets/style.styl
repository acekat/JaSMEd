.note.on.login-thibaud
	background: thibaud

.note.on.login-jaimito
	background: jaimito

.note.on.login-acekat
	background: acekat

.note.on.login-esj
	background: esj

.note.on.login-grizix
	background: grizix

.note.on.login-berthou
